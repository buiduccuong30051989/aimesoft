extends layout/_default

block head
  +head('Aimesoft - Blog')

block main
  .aime-hero-intro
  .aime-portfolio.bg-white-light
    .container.tex-center
      h2.aime-title.text-center.pb-2 Our Portfolio
      ul.filters-block.w-100
        li.filters-block__item.is-checked(data-filter='.news') News      
        li.filters-block__item(data-filter='.insights') Insights
