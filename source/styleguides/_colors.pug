//-------------------------------------------------------
//- Styleguides :: Colors
//-------------------------------------------------------

-
  var colors = [
    { key: '$white', color: '#fff' },
    { key: '$black', color: '#000' },
    { key: '$black-light', color: '#1b1c1c' },
    { key: '$black-lighter', color: '#545555' },
    { key: '$green', color: '#0ac4bb' },
    { key: '$green-dark', color: '#05a5ad' },
    { key: '$orange', color: '#f88b4c' },
    { key: '$range-pink', color: '#f36b51' },
    { key: '$gray', color: '#e8e8e8' },
    { key: '$gray-dark', color: '#828282' },
    { key: '$gray-darker', color: '#2f4142' },
    { key: '$gray-light', color: '#efefef' },
    { key: '$gray-lighter:', color: '#c6c6c6' },
    { key: '$gray-lightest', color: '#f8f8f8' }
  ];

.row
  each val in colors
    .col-3
      .code-example
        .demo(style=`background-color: ${val.color}; width: 100%; height: 100px`)
        pre
          code
            | #{val.key}: #{val.color}
